<?xml version="1.0" encoding="utf-8"?>

<data>
    <record model="ir.ui.view" id="ipf_showorder_client_config_view_list">
        <field name="name">IPF Showorder Client Config View List</field>
        <field name="model">ipf.showorder.client.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="url"/>
                <field name="environment"/>
                <field name="client_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="ipf_showorder_client_config_view_form">
        <field name="name">IPF Showorder Client Config View Form</field>
        <field name="model">ipf.showorder.client.config</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_button_box" name="button_box">

                    <button class="oe_stat_button" type="object"
                            string="GET ORDER" name="get_order"/>

                    <button class="oe_stat_button" type="object"
                            string="POST ORDER" name="post_order"/>

                    <button class="oe_stat_button" type="object"
                            string="GET ORDER ID" name="get_order_id"/>

                    <button class="oe_stat_button" type="object"
                            string="PATCH ORDER" name="patch_order"/>
                </div>
                <group>
                    <group>
                        <field name="url"/>
                        <field name="environment"/>
                        <field name="client_id"/>
                        <field name="client_secret" password="True"/>
                    </group>
                    <group string="Requests" colspan="4">
                        <field name="request_history_ids" nolabel="1"
                               colspan="4">
                            <tree>
                                <field name="url"/>
                                <field name="method"/>
                                <field name="response_code"/>
                                <field name="message"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="url"/>
                                    <field name="method"/>
                                    <field name="payload"/>
                                    <field name="request_headers"/>
                                    <field name="params"/>
                                    <field name="response_code"/>
                                    <field name="response_headers"/>
                                    <field name="message"/>
                                </group>
                            </form>
                        </field>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ipf_showorder_client_config_action_window">
        <field name="name">IPF Showorder Client Config</field>
        <field name="res_model">ipf.showorder.client.config</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ipf_showorder_client_config"
              name="IPF Showorder"
              action="ipf_showorder_client_config_action_window"
              parent="api_ipf.api_client_config_parent_menu"
              sequence="6"/>
    
    <record model="ir.ui.view" id="ipf_showorder_report_client_config_request_history">
        <field name="name">IPF Showorder Client Config Request History View List</field>
        <field name="model">ipf.showorder.request.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="config_id"/>
                <field name="url"/>
                <field name="method"/>
                <field name="payload"/>
                <field name="request_headers"/>
                <field name="response_headers"/>
                <field name="params"/>
                <field name="response_code"/>
                <field name="message"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="ipf_showorder_report_client_config_request_history_action_window">
        <field name="name">IPF Showorder Client Config Request History</field>
        <field name="res_model">ipf.showorder.request.history</field>
        <field name="view_mode">tree</field>
    </record>
    <menuitem id="menu_ipf_showorder_report_client_config_request_history"
              name="IPF Showorder"
              action="ipf_showorder_report_client_config_request_history_action_window"
              parent="api_ipf.client_config_request_history_parent_menu"
              sequence="6"/>
              
</data>
